{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["DOM", "ES2015"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["dist", "coverage", "node_modules"]
}
